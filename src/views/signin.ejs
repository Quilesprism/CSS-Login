<%- layout('layout/main') %>

<link rel="stylesheet" href="/assets/styles.css">

<div class="init">
    <span class="login__mask"></span>
    <form action="/signin" method="POST">
        <h1 class="login__heading">Sign up</h1>
        <div class="container">
            <div class="form_group">
                <input type="email" name="email" class="form_input" placeholder=" ">
                <label class="form_label">Email address</label>
            </div>
            <div class="form_group">
                <input type="password" name="password"  class="form_input" placeholder=" ">
                <label class="form_label">Password</label>
            </div>
        </div>
        <button type="submit" class="form_button">Login</button>
        <p>don't have an account? <a href="login" class="link-info">Signup</a></p>
    </form>
</div>